{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "PUBG Post Analytica",
    "version": "0.0.1",
    "minimum-overwolf-version": "0.120.0",
    "author": "Joan Albert Segura Rueda",
    "icon": "IconMouseOver.png",
    "icon_gray": "IconMouseNormal.png",
    "launcher_icon": "desktop-icon.ico",
    "description": "Sample app for PUBG dev challenge in React",
    "dock_button_title": "PUBG Post-analysis"
  },
  "permissions": [
    "Hotkeys"
  ],
  "data": {
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [10906]
    },
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [10906]
        },
        "start_minimized": true
      }
    ],
    "hotkeys": {
      "pubg_postAnalysis_showhide": {
        "title": "Show In-Game Window",
        "action-type": "toggle",
        "default": "Ctrl+F"
      },
      "pubg_postAnalysis_screenshot": {
        "title": "Take Screenshot",
        "action-type": "custom",
        "default": "Ctrl+C"
      }
    },
    "game_events": [10906],
    "start_window": "main",
    "windows": {
      "main": {
        "file": "build/index.html",
        "override_on_update": true,
        "show_in_windows": true,
        "resizable": false,
        "show_minimize": true,
        "show_maximize": false,
        "show_in_taskbar": true,
        "desktop_only": true,
        "grab_focus_on_desktop": true,
        "use_os_windowing": true,
        "topmost": false,
        "background_optimization": true,
        "native_window": true,
        "transparent": true,
        "start_position": {
          "top": 150,
          "left": 320
        },
        "size": {
          "width": 1280,
          "height": 775
        },
        "min_size": {
          "width": 1280,
          "height": 775
        }
      },
      "settingss": {
        "file": "build/index.html",
        "override_on_update": true,
        "transparent": true,
        "resizable": false,
        "clickthrough": true,
        "grab_focus_on_desktop": true,
        "start_position": {
          "top": 400,
          "left": 580
        },
        "size": {
          "width": 500,
          "height": 580
        },
        "min_size": {
          "width": 500,
          "height": 580
        }
      },
      "ingame": {
        "file": "build/index.html",
        "in_game_only": true,
        "transparent": true,
        "resizable": true,
        "start_position": {
          "top": 0,
          "left": 0
        },
        "size": {
          "width": 500,
          "height": 95
        },
        "min_size": {
          "width": 500,
          "height": 95
        }
      }
    },
    "externally_connectable": {
      "matches": [
        "http://*.overwolf.com",
        "https://*.overwolf.com",
        "https://*.google-analytics.com",
        "http://*.google-analytics.com",
        "https://www.googleapis.com",
        "https://api.pubg.com/*",
        "https://2z9znr6j0a.execute-api.eu-west-1.amazonaws.com/*",
        "https://8uodths1pe.execute-api.eu-west-1.amazonaws.com/*"
      ]
    }
  }
}
